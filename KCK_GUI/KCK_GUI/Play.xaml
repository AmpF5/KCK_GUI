<Window x:Class="KCK_GUI.Play"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KCK_GUI"
        mc:Ignorable="d"
        Title="Play" Height="800" Width="600">
    <Canvas Name="MyCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name ="player" Height="50" Width="60" Fill="Yellow" Canvas.Left="275" Canvas.Top="700" />
        <Label Name ="scoreText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White" />
        <Label Name ="HP" Content="HP: 3" FontSize="18" FontWeight="Bold" Foreground="White" Canvas.Left="530"/>

    </Canvas>
</Window>
